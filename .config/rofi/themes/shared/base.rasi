/**
 * Removes unwanted styles and sets up the base of the theme
 */

@import "~/.cache/wal/colors.rasi"


// Theme settings
* {
  font-small: "monospace 11";
  font-regular: "monospace 14";
  font-big: "monospace 16";

  icon-font: "monospace 40";
}
@media(min-width: 1920) {
  * {
    font-big: "monospace 22";
    
    icon-font: "monospace 55";
  }
}


* {
  background-color: #0000;
  text-color: @foreground;
  font: @font-regular;
}
