[module/powermenu-old]
type = custom/menu

expand-right = true

format-spacing = 0

label-open-foreground = ${colors.secondary}
label-open-background = ${colors.background}
label-close-foreground = ${colors.foreground-alt}
label-close-background = ${colors.background}
